
@model WebApplication5.Models.Product
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <form method="post" asp-controller="home" asp-action="edit">
        <table>
         
            <tr>
                <td>Name</td>
                <td>
                    <input type="text" asp-for="Name" required="required" />
                </td>

            </tr>
            <tr>
                <td>Price</td>
                <td>
                    <input type="number" asp-for="Price" min="0" required="required" />
                </td>

            </tr>
            <tr>
                <td>Quantity</td>
                <td>
                    <input type="number" asp-for="Quantity" min="0" required="required" />
                </td>

            </tr>
            <tr>
                <td>Status</td>
                <td>
                    <input type="checkbox" asp-for="Status" />
                </td>

            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>
                    <input type="submit" value="Save" />
                </td>

            </tr>
        </table>
    </form>
</body>
</html>
