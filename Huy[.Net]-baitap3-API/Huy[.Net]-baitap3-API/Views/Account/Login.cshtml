
@model Huy_.Net__baitap3_API.Models.TokenRequestModel;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section head{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="~/huycss/login.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/css/toastr.css" rel="stylesheet"/>
}
<form action="" method="post" name="login" id="loginForm" >
            <header>Login Form</header>
        <div class="mb-3">
            <label class="form-label" for="email"><b>Email</b></label>
            <div class="input-group">
                <span class="input-group-text" id="basic-addon1"><img src="~/imagess/email.jpg" alt=""></span>
                <input type="email" class="form-control" asp-for="Email" placeholder="Enter Email" name="Email" id="email">
            </div>
            <div id="validation-email" class="valid-input"></div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="psw"><b>Password</b></label>
            <div class="input-group">
                <span class="input-group-text" id="basic-addon1"><img src="~/imagess/password.png" alt=""></span>
                <input type="password" class="form-control" placeholder="Enter Password" asp-for="Password" name="Password" id="password">
            </div>
            <div id="validation-password" class="valid-input"></div>
        </div>
        <br>
        <div class="mb-3">
                <label for="">
                    <input type="checkbox" checked='checked' name="remember" id="">Remember me
                </label>        
        </div>
        <div class="mb-3">
            <div class="button">
				<div class="inner">
				</div>
				<button type="button" onclick="loginAccount(document.login)" id="btnLogin">LOGIN</button>
			</div>
            <!-- <input type="submit" id="btnlogin" value="LOGIN" class="btn btn-primary"> -->
        </div>
        <div class="mb-3">
            <div class="auth">
                Or login with</div>
                <div class="links">
                    <div class="facebook">
                        <i class="fab fa-facebook-square"><span>Facebook</span></i>
                    </div>
                    <div class="google">
                        <i class="fab fa-google-plus-square"><span>Google</span></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="mb-3">
            <p>You don't have account ? Please <a href="">Register</a></p>
        </div>
    </form>


@section Scripts{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="~/js/fake_api.js" ></script>
    <script src="~/js/cookies.js" ></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/js/toastr.js"></script>
