@model Huy_.NET__baitap2_codeFirst.Models.Student
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create Student"; 
}
<h2 class="display-4">Create Student</h2>

<form asp-controller="student" asp-action="create" class="m-2 p-3 bg-light">
            <div class="form-group">
                <label class="control-label">LastName</label>
                <input name="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">FirstMidName</label>
                <input name="FirstMidName" class="form-control" />
                <span asp-validation-for="FirstMidName"  class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">EnrollmentDate</label>
                <input type="datetime" name="EnrollmentDate" class="form-control" />
                <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>