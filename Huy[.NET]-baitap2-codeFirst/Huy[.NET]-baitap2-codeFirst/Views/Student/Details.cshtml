@model Huy_.NET__baitap2_codeFirst.Models.Student
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "details";
}

<dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.LastName)
</dt>
<dd class="col-sm-10">
    @ViewBag.student.ID
</dd>
<dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.FirstMidName)
</dt>
<dd class="col-sm-10">
    @ViewBag.student.FirstMidName
</dd>
<dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.EnrollmentDate)
</dt>
<dd class="col-sm-10">
    @ViewBag.student.EnrollmentDate
</dd>
<dt class="col-sm-2">
    @Html.DisplayNameFor(model => model.Enrollments)
</dt>
<dd class="col-sm-10">
    <table border="1" class="table">
        <tr>
            <th>Course Title</th>
            <th>Grade</th>
        </tr>
        @foreach (var en in ViewBag.student.Enrollments)
        {
            <tr>
                <td>
                    @en.Course.Title
                </td>
                <td>
                    @en.Grade
                </td>
            </tr>
        }
    </table>
</dd>

