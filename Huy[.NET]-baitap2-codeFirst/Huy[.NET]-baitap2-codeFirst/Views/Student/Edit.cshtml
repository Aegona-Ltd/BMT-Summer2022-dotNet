@model Huy_.NET__baitap2_codeFirst.Entities.StudentInfo
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit Student"; 
}    

<h2 class="display-4">Edit Student</h2>

<form asp-controller="student" asp-action="edit" class="m-2 p-3 bg-light">
            <div class="form-group">
                <label class="control-label">ID</label>
                <input name="ID" value="@Model.ID" class="form-control" readonly />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">LastName</label>
                <input name="LastName" value="@Model.LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">FirstMidName</label>
                <input name="FirstMidName" value="@Model.FirstMidName" class="form-control" />
                <span asp-validation-for="FirstMidName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">EnrollmentDate</label>
                <input type="datetime" name="EnrollmentDate" value="@Model.EnrollmentDate" class="form-control" />
                <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>